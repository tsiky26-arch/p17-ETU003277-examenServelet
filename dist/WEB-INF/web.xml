<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>Exam</display-name>
    <servlet>
        <servlet-name>AuthServlet</servlet-name>
        <servlet-class>auth.AuthServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/AuthServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>AccueilServlet</servlet-name>
        <servlet-class>controller.AccueilServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccueilServlet</servlet-name>
        <url-pattern>/AccueilServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ajoutLigneDeCredit</servlet-name>
        <servlet-class>controller.AjoutLigneDeCreditServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>ajoutLigneDeCredit</servlet-name>
        <url-pattern>/ajouter-credit</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ajoutDepense</servlet-name>
        <servlet-class>controller.AjoutDepenseServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>ajoutDepense</servlet-name>
        <url-pattern>/ajouter-depense</url-pattern>
    </servlet-mapping>

</web-app>
